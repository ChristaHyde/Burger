<h1>Burgers!</h1>
<div class="container">
    <div class="devoured-burger">
        <h2>Burgers that have been Devoured!</h2>

        <ul>
            {{#each burger}}
            {{#unless devoured}}
            {{> burger/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="waiting-devoured">
        <h2>Waiting to be Devoured!</h2>

        <ul>
            {{#each burger}}
            {{#if devoured}}
            {{> burger/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="devour">Devoured?</label><br>
        <input type="radio" name="devour" value="1" checked> Devoured!<br>
        <input type="radio" name="devour" value="0"> Hungry
    </div>

    <button type="submit">Add Burger</button>
</form>